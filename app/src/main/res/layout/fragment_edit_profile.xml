<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etYourName"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:hint="@string/your_name"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_person"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/etYourPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:hint="@string/your_phone_number"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_phone"
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/etYourEmail"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:hint="@string/your_email"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_email"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btnSaveProfile"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="@string/save" />

    </LinearLayout>


</LinearLayout>
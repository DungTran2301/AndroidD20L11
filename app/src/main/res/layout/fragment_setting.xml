<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/tvYourProfile"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            android:text="@string/your_profile"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvYourName"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:text="@string/your_name"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_person"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tvYourPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:text="@string/your_phone_number"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_phone"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tvYourEmail"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:text="@string/your_email"
            android:textSize="30sp"
            app:drawableLeftCompat="@drawable/ic_email"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:text="@string/edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/white"
            app:drawableTint="@color/white"
            app:drawableTopCompat="@drawable/ic_home" />

        <TextView
            android:id="@+id/tvPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/play"
            android:textColor="@color/white"
            app:drawableTint="@color/white"
            app:drawableTopCompat="@drawable/ic_music" />

        <TextView
            android:id="@+id/tvSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/white"
            app:drawableTint="@color/white"
            app:drawableTopCompat="@drawable/ic_setting" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
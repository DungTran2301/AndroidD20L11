<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.dungtran.androidd20l11.EditProfileFragment"
        android:label="Edit profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_yourProfileFragment"
            app:destination="@id/yourProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dungtran.androidd20l11.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dungtran.androidd20l11.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/playFragment"
        android:name="com.dungtran.androidd20l11.PlayFragment"
        android:label="Play"
        tools:layout="@layout/fragment_play" />
    <fragment
        android:id="@+id/yourMusicFragment"
        android:name="com.dungtran.androidd20l11.YourMusicFragment"
        android:label="Your music"
        tools:layout="@layout/fragment_your_music" />
    <fragment
        android:id="@+id/yourProfileFragment"
        android:name="com.dungtran.androidd20l11.YourProfileFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_your_profile" >
        <action
            android:id="@+id/action_yourProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
</navigation>